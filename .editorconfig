root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,ts,json,md}]
charset = utf-8

[*.{js,ts}]
trim_trailing_whitespace = true
min_blank_lines_around_fields = 1
space_after_colon_in_type_annotation = true
space_around_pipe_or_amper_in_type_usage = true
empty_block_style = together
brace_style = end_of_line
indent_switch_labels = true
quote_style = singlequoted
js_termination_style = ensure_semicolon
space_between_parentheses_of_control_flow_statements = true
space_between_square_brackets = true
space_between_method_declaration_name_and_open_parenthesis = true
space_between_method_call_name_and_opening_parenthesis = false
space_before_comma = false
space_after_keywords_in_control_flow_statements = true
space_before_open_square_brackets = false
space_around_member_access_operator = false
space_around_binary_operator = true
space_around_ternary_operator = true
space_after_comma = true
space_after_unary_operator = false

# Matches the exact files either package.json
[package.json]
indent_style = space
indent_size = 2
